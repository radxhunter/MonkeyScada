{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "yarp": {
    "routes": {
      "aggregator": {
        "clusterId": "aggregator",
        "match": {
          "path": "aggregator/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "notifier": {
        "clusterId": "notifier",
        "match": {
          "path": "notifier/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "lineman-http": {
        "clusterId": "lineman-http",
        "match": {
          "path": "lineman/http/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "lineman-modbus": {
        "clusterId": "lineman-modbus",
        "match": {
          "path": "lineman/modbus/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "aggregator": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6010"
          }
        }
      },
      "notifier": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6020"
          }
        }
      },
      "lineman-http": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6030"
          }
        }
      },
      "lineman-modbus": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6040"
          }
        }
      }
    }
  }
}
